                  <RadzenPassword MaxLength="50" style="display: block; width: 100%" @bind-Value="@(usermst.USER_PSWD)" Name="USER_PSWD">
                  </RadzenPassword>
                  <RadzenRequiredValidator Component="USER_PSWD" Text="USER_PSWD is required" style="position: absolute">
                  </RadzenRequiredValidator>
                
                  <RadzenLengthValidator Component="USER_PSWD" Min="8" Max="12" Text="password is 8 to 12 characters"></RadzenLengthValidator>

