                 <RadzenLabel  Text=@Lang("LANGUAGE")   Component="LANGUAGE"  style="width: 100%"> 
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                  <RadzenTextBox MaxLength="2" style="width: 100%" @bind-Value="@(usermst.LANGUAGE)" Name="LANGUAGE">
                  </RadzenTextBox>
                  <RadzenDh5.Validator.DhLangValidator Component="LANGUAGE" Text="must be EN,TW,CN,TH or VN" style="position:relative">
                  </RadzenDh5.Validator.DhLangValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                 <RadzenLabel  Text=@Lang("ENABLE")   Component="ENABLE"  style="width: 100%"> 
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                  <RadzenTextBox MaxLength="1" style="width: 100%" @bind-Value="@(usermst.ENABLE)" Name="ENABLE">
                  </RadzenTextBox>
                  <RadzenDh5.Validator.DhYNValidator Component="ENABLE" Text="must be Y or N" style="position:relative">
                  </RadzenDh5.Validator.DhYNValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
